<%= simple_form_for [forem, @forum, @topic], html: {class: 'ui form'} do |f| %>
  <%= f.input :subject, wrapper_html: { class: 'field' }, required: false %>

  <%= f.simple_fields_for :posts do |post| %>
    <%= render :partial => "forem/posts/form", :locals => { :f => post }%>
  <% end %>
  
  <%= f.submit :class => "btn btn-primary ui green button" %>
<% end %>