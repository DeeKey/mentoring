<a name='post-<%= post.id %>'></a>
<div class="ui orange segment">
  <div id='post_<%= post.id %>' class='reply_to_post post <%= cycle('odd', 'even') -%> col-md-10 ui two column divided grid'>
    <div class='user col-md-2 three wide column'>
      <div class='username'>
        <%= link_to_if Forem.user_profile_links, post.user.forem_name, [main_app, post.user] %>
      </div>
      <br>
      <div class='icon ui image'><%= forem_avatar(post.user, :size => 60) %></div>
    </div>

    <div class='contents col-md-7 thirteen wide column'>
      <time datetime="<%= post.created_at.to_s(:db) -%>"><%= "#{time_ago_in_words(post.created_at)} #{t("ago")}" %></time>
      <div class="ui divider"></div>
      <p>
        <%= forem_format(post.text) %>
      </p>

      <% if post.reply_to %>
        <p class='in_reply_to'>
          <%= link_to "#{t("forem.post.in_reply_to")} #{post.reply_to.user.forem_name}", "#post-#{post.reply_to.id}" %>
        </p>
      <% end %>
    </div>
  </div>
</div>