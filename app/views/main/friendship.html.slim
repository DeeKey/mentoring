.slider_block
  .dat_slider
    ul.bxslider
      - @children.each do |child|
        li
          .ui.items.bxslide
            .item
              .ui.image.medium
                - if child.avatar.present?
                  = image_tag child.avatar.url(:original, false)
                - else
                  = image_tag 'image.png'

              .content
                .header = child.name
                .description
                  = child.description
                .extra
                  = "Год рождения: #{child.birthdate.year}"
          br
          br
